<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="27dp"
        android:text="Seleccione el elemento que no tiene nada que ver con los demás en la lista"
        app:layout_constraintBottom_toTopOf="@+id/frutas_radgroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/frutas_radgroup"
        android:layout_width="275dp"
        android:layout_height="343dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/op_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manzana" />

        <RadioButton
            android:id="@+id/op_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pera" />

        <RadioButton
            android:id="@+id/op_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiwi" />

        <RadioButton
            android:id="@+id/op_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Piña" />

        <RadioButton
            android:id="@+id/op_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limón" />

        <RadioButton
            android:id="@+id/op_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ferrari" />

        <RadioButton
            android:id="@+id/op_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresa" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="48dp"
        android:text="Enviar respuesta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>